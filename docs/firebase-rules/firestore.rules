rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // === PUBLIC CONTENT (Read-only for everyone) ===
    
    // Cities - Public read
    match /cities/{cityId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Experiences - Public read for published
    match /experiences/{experienceId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Travels - Public read for published
    match /travels/{travelId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Services - Public read for published
    match /services/{serviceId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Blog - Public read for published
    match /blog/{postId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Instagram Videos - Public read
    match /instagramVideos/{videoId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Site Settings - Public read
    match /siteSettings/{settingId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Menu Items - Public read
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Testimonials - Public read
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // FAQ - Public read
    match /faq/{faqId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // CMS Sections - Public read
    match /cms_sections/{sectionId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Site Theme - Public read
    match /site_theme/{themeId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Package Components - Public read
    match /package_components/{componentId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // === USER DATA ===
    
    // Users collection - Users can read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Bookings - Users can read/create their own bookings
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Managed via Admin SDK
      allow delete: if false;
    }
    
    // Wishlist - Users can manage their own wishlist
    match /wishlist/{wishlistId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Friend Codes - Users can manage their own codes
    match /friendCodes/{codeId} {
      allow read: if true; // Public for sharing
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Friendships - Users can manage their own friendships
    match /friendships/{friendshipId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.friendId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.friendId == request.auth.uid
      );
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Friend Notifications - Users can read their own notifications
    match /friendNotifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Custom Trip Requests - Users can create and read their own
    match /customTripRequests/{requestId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Managed via Admin SDK
      allow delete: if false;
    }
    
    // === ADMIN COLLECTIONS (Server-side only) ===
    
    // Admin Users - No client access
    match /adminUsers/{adminId} {
      allow read: if false;
      allow write: if false;
    }
    
    // Vehicles - Public read
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if false; // Managed via Admin SDK
    }
    
    // Legacy site_content
    match /site_content/{contentId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
