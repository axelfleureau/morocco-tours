rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to cities data
    match /cities/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to travel packages
    match /travels/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to experiences
    match /experiences/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Bookings - authenticated users can create, admin can read/write
    match /bookings/{document} {
      allow read, write: if request.auth != null;
      allow create: if true; // Allow anonymous bookings
    }
    
    // CMS content - admin only
    match /cms_content/{document} {
      allow read: if true; // Public read for published content
      allow write: if request.auth != null; // Admin write
    }
    
    match /cms_sections/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Package components and templates - public read, admin write
    match /package_components/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /package_templates/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User themes - authenticated users only
    match /user_themes/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Guides - public read, admin write
    match /guides/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users - authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Admin can read all users
    }
    
    // Inquiries - allow creation, admin can read/write
    match /inquiries/{document} {
      allow create: if true; // Allow anonymous inquiries
      allow read, write: if request.auth != null; // Admin access
    }
    
    // Blog posts - public read, admin write
    match /blog/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics - admin only
    match /analytics/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Site content - public read, admin write
    match /site_content/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Services - public read, admin write
    match /services/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}